{% extends "app.twig" %}

{% block content %}

	<div class="row">
		<div class="col-md-12">
			<div class="card">

				<div class="card-header">
					<h4>My Profile</h4>
				</div>

				<div class="card-body">
				
					<form action="{{ base_url() }}/account" method="POST" class="form-horizontal" role="form" autocomplete="off">

						{{ csrf.field | raw }}
					
					
						<div class="form-group {{ errors.bank_name ? ' has-error' : '' }}">
							<label class="control-label col-sm-4" for="bank_name">Bank :</label>
							<div class="col-sm-8">
								<input type="text" name="bank_name" id="bank_name" class="form-control" value="{{ auth.user.account.bank_name }}" title="">
							</div>
							{% if ( errors.bank_name ) %}	
								<span class="text-danger help-block text-center">{{ errors.bank_name | first }}</span>
							{% endif %}								
						</div>
					
						<div class="form-group {{ errors.account_number ? ' has-error' : '' }}">
							<label class="control-label col-sm-4" for="account_number">Account Number :</label>
							<div class="col-sm-8">
								<input type="text" name="account_number" id="account_number" class="form-control" value="{{ auth.user.account.account_number }}" title="">
							</div>
							{% if ( errors.account_number ) %}	
								<span class="text-danger help-block text-center">{{ errors.account_number | first }}</span>
							{% endif %}								
						</div>
					
						<div class="form-group {{ errors.account_type ? ' has-error' : '' }}">
							<label class="control-label col-sm-4" for="account_type">Account Type :</label>
							<div class="col-sm-8">
								<input type="text" name="account_type" id="account_type" class="form-control" value="{{ auth.user.account.account_type }}" title="">
							</div>
							{% if ( errors.account_type ) %}	
								<span class="text-danger help-block text-center">{{ errors.account_type | first }}</span>
							{% endif %}								
						</div>
					
				
						<div class="form-group">
							<div class="col-md-6 offset-md-3">
								<button type="submit" class="btn btn-danger">Update</button>
							</div>
						</div>

					</form>

				</div>

			</div>
		</div>
	</div>

{% endblock %}