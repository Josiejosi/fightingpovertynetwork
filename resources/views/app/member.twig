{% extends "app.twig" %}

{% block content %}

	<div class="row">

		<div class="col-md-12">

			<div class="card">

				<div class="content">

					<div class="card-header m-2"><h5>Member Details</h5></div>

					<div class="card-body m-2">

						<div class="row">

							<div class="col-sm-12">
					
								<table class="table table-responsive table-inverse">
									<tbody>
										<tr>
											<td>Username</td>
											<td> : {{ user.username }}</td>
										</tr>
										<tr>
											<td>Name</td>
											<td> : {{ user.name }} {{ user.surname }}</td>
										</tr>
										<tr>
											<td>Phone :</td>
											<td> : {{ user.phone }}</td>
										</tr>
										<tr>
											<td>Email :</td>
											<td> : {{ user.email }}</td>
										</tr>
										<tr>
											<td>Bank :</td>
											<td> : {{ user.account.bank_name }}</td>
										</tr>
										<tr>
											<td>Account Number :</td>
											<td> : {{ user.account.account_number }}</td>
										</tr>
										<tr>
											<td>Account Type :</td>
											<td> : {{ user.account.account_type }}</td>
										</tr>
										<tr>
											<td>Amount :</td>
											<td> : R 200</td>
										</tr>
									</tbody>
								</table>

							</div>

						</div>

					</div>

				</div>

			</div>

		</div>

	</div>

{% endblock %}