{% extends "front.twig" %}

{% block content %}

	<section class="services-page">
	    <div class="layer">
	        <div class="container">
				<div class="card-body">

					<div class="card-header">
						<h4>Login</h4>
					</div>

					<div class="card-body">
					
						<form action="{{ base_url() }}/reset/password" method="POST" class="form-horizontal" role="form" autocomplete="off">

							{{ csrf.field | raw }}

							<input type="hidden" name="email_token" value="{{ email_token }}">
						
						
							<div class="form-group {{ errors.password ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="password">Password :</label>
								<div class="col-sm-8">
									<input type="password" name="password" class="form-control" value="" title="">
								</div>	
								{% if ( errors.password ) %}	
									<span class="text-danger help-block text-center">{{ errors.password | first }}</span>
								{% endif %}							
							</div>
						
							<div class="form-group">
								<label class="control-label col-sm-4" for="confirm_password">Confirm Password :</label>
								<div class="col-sm-8">
									<input type="password" name="confirm_password" class="form-control" value=""title="">
								</div>							
							</div>
					
							<div class="form-group">
								<div class="col-sm-10 col-sm-offset-2">
									<button type="submit" class="btn btn-primary">Reset Password</button>
								</div>
							</div>

						</form>

					</div>

				</div>
			</div>
		</div>

	</section>

{% endblock %}