{% extends "front.twig" %}

{% block content %}

	<section class="about-page">
	    <div class="layer">
	        <div class="container">
				<div class="card-body">

					<div class="card-header">
						<h4>Activation</h4>
					</div>

					<div class="card-body">

						{% include( 'partials/flash.twig' ) %}

						<table class="table table-responsive table-inverse">
							<tbody>
								<tr>
									<td>Username</td>
									<td> : {{ upliner.username }}</td>
								</tr>
								<tr>
									<td>Name</td>
									<td> : {{ upliner.name }} {{ upliner.surname }}</td>
								</tr>
								<tr>
									<td>Phone :</td>
									<td> : {{ upliner.phone }}</td>
								</tr>
								<tr>
									<td>Email :</td>
									<td> : {{ upliner.email }}</td>
								</tr>
								<tr>
									<td>Bank :</td>
									<td> : {{ upliner.account.bank_name }}</td>
								</tr>
								<tr>
									<td>Account Number :</td>
									<td> : {{ upliner.account.account_number }}</td>
								</tr>
								<tr>
									<td>Account Type :</td>
									<td> : {{ upliner.account.account_type }}</td>
								</tr>
								<tr>
									<td>Amount :</td>
									<td> : R 200</td>
								</tr>
								<tr>
									<td colspan="2">
										<form class="form-horizontal" action="{{ base_url() }}/login" method="post" autocomplete="off">
											
											{{ csrf.field | raw }}

										    <div class="form-group">
										        <div class="col-md-12">
										            <button type="submit" class="btn btn-success btn-block">Confirm Sending Payment</button>
										            <a href="{{ base_url() }}/dashboard" class="btn btn-warning btn-block">Go to Dashboard</a>
										            <a href="{{ base_url() }}/logout" class="btn btn-link">Logout</a>
										        </div>
									    	</div>
										    
										</form>
									</td>
								</tr>
							</tbody>
						</table>

					</div>

				</div>
			</div>
		</div>

	</section>

{% endblock %}