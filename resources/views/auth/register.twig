{% extends "front.twig" %}

{% block content %}

	<section class="services-page">
	    <div class="layer">
	        <div class="container">
				<div class="card-body">

					<div class="card-header">
						<h4>Register</h4>
					</div>

					<div class="card-body">

						{% include( 'partials/flash.twig' ) %}
				
						<form action="{{ base_url() }}/register" method="POST" class="form-horizontal" role="form" autocomplete="off">

							{{ csrf.field | raw }}
						
							<div class="form-group {{ errors.email ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="email">Email Address :</label>
								<div class="col-sm-8">
									<input type="email" name="email" id="email" class="form-control" value="{{ old.email }}" title="">
								</div>
								{% if ( errors.email ) %}	
									<span class="text-danger help-block text-center">{{ errors.email | first }}</span>
								{% endif %}						
							</div>
						
							<div class="form-group {{ errors.name ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="name">Name :</label>
								<div class="col-sm-8">
									<input type="text" name="name" id="name" class="form-control" value="{{ old.name }}" title="">
								</div>
								{% if ( errors.name ) %}	
									<span class="text-danger help-block text-center">{{ errors.name | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.surname ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="surname">Surname :</label>
								<div class="col-sm-8">
									<input type="text" name="surname" id="surname" class="form-control" value="{{ old.surname }}" title="">
								</div>
								{% if ( errors.surname ) %}	
									<span class="text-danger help-block text-center">{{ errors.surname | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.phone_number ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="phone_number">Phone Number :</label>
								<div class="col-sm-8">
									<input type="text" name="phone_number" id="phone_number" class="form-control" value="{{ old.phone_number }}" title="">
								</div>
								{% if ( errors.phone_number ) %}	
									<span class="text-danger help-block text-center">{{ errors.phone_number | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.country ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="country">Country :</label>
								<div class="col-sm-8">
									<input type="text" name="country" id="country" class="form-control" value="{{ old.country }}" title="">
								</div>
								{% if ( errors.country ) %}	
									<span class="text-danger help-block text-center">{{ errors.country | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.bank ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="bank">Bank :</label>
								<div class="col-sm-8">
									<input type="text" name="bank" id="bank" class="form-control" value="{{ old.bank }}" title="">
								</div>
								{% if ( errors.bank ) %}	
									<span class="text-danger help-block text-center">{{ errors.bank | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.account_number ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="account_number">Account Number :</label>
								<div class="col-sm-8">
									<input type="text" name="account_number" id="account_number" class="form-control" value="{{ old.account_number }}" title="">
								</div>
								{% if ( errors.account_number ) %}	
									<span class="text-danger help-block text-center">{{ errors.account_number | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.account_type ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="account_type">Account Type :</label>
								<div class="col-sm-8">
									<input type="text" name="account_type" id="account_type" class="form-control" value="{{ old.account_type }}" title="">
								</div>
								{% if ( errors.account_type ) %}	
									<span class="text-danger help-block text-center">{{ errors.account_type | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.upliner_name ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="upliner_name">Upliner Username :</label>
								<div class="col-sm-8">
									<input type="text" name="upliner_name" id="upliner_name" class="form-control" value="{{ old.upliner_name }}" title="">
								</div>
								{% if ( errors.upliner_name ) %}	
									<span class="text-danger help-block text-center">{{ errors.upliner_name | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.username ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="username">Username :</label>
								<div class="col-sm-8">
									<input type="text" name="username" id="username" class="form-control" value="{{ old.username }}" title="">
								</div>
								{% if ( errors.username ) %}	
									<span class="text-danger help-block text-center">{{ errors.username | first }}</span>
								{% endif %}								
							</div>
						
							<div class="form-group {{ errors.password ? ' has-error' : '' }}">
								<label class="control-label col-sm-4" for="password">Password :</label>
								<div class="col-sm-8">
									<input type="password" name="password" id="password" class="form-control" value="" title="">
								</div>	
								{% if ( errors.password ) %}	
									<span class="text-danger help-block text-center">{{ errors.password | first }}</span>
								{% endif %}							
							</div>
						
							<div class="form-group">
								<label class="control-label col-sm-4" for="confirm_password">Confirm Password :</label>
								<div class="col-sm-8">
									<input type="password" name="confirm_password" id="confirm_password" class="form-control" value=""title="">
								</div>							
							</div>
					
							<div class="form-group">
								<div class="col-md-6 offset-md-3">
									<button type="submit" class="btn btn-success btn-block">Register</button>
								</div>
							</div>

						</form>

					</div>

				</div>
			</div>
		</div>

	</section>

{% endblock %}