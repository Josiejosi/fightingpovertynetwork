<section class="index-contact">
    <div class="layer">
        <div class="container">
            <h3 data-aos="zoom-in" data-aos-duration="1000">Need HELP Getting Started?</h3>

                    <form action="{{ base_url() }}/contact_us" method="POST" class="form-horizontal" role="form" autocomplete="off">

                        {{ csrf.field | raw }}
                    
                        <div class="form-group {{ errors.email ? ' has-error' : '' }}">
                            <label class="control-label col-sm-4" for="email">Email Address :</label>
                            <div class="col-sm-8">
                                <input 
                                    type="email" 
                                    name="email" 
                                    class="form-control" 
                                    value="{{ old.email }}">
                            </div>
                            {% if ( errors.email ) %}   
                                <span class="text-danger help-block text-center">{{ errors.email | first }}</span>
                            {% endif %}                     
                        </div>
                    
                        <div class="form-group {{ errors.name ? ' has-error' : '' }}">
                            <label class="control-label col-sm-4" for="name">Name :</label>
                            <div class="col-sm-8">
                                <input type="text" name="name" id="name" class="form-control" value="{{ old.name }}" title="">
                            </div>
                            {% if ( errors.name ) %}    
                                <span class="text-danger help-block text-center">{{ errors.name | first }}</span>
                            {% endif %}                             
                        </div>
                    
                        <div class="form-group {{ errors.surname ? ' has-error' : '' }}">
                            <label class="control-label col-sm-4" for="surname">Surname :</label>
                            <div class="col-sm-8">
                                <input type="text" name="surname" id="surname" class="form-control" value="{{ auth.user.surname }}" title="">
                            </div>
                            {% if ( errors.surname ) %} 
                                <span class="text-danger help-block text-center">{{ errors.surname | first }}</span>
                            {% endif %}                             
                        </div>
                    
                        <div class="form-group {{ errors.phone_number ? ' has-error' : '' }}">
                            <label class="control-label col-sm-4" for="phone_number">Phone Number :</label>
                            <div class="col-sm-8">
                                <input type="text" name="phone_number" id="phone_number" class="form-control" value="{{ old.phone_number }}" title="">
                            </div>
                            {% if ( errors.phone_number ) %}    
                                <span class="text-danger help-block text-center">{{ errors.phone_number | first }}</span>
                            {% endif %}                             
                        </div>
                    
                        <div class="form-group {{ errors.subject ? ' has-error' : '' }}">
                            <label class="control-label col-sm-4" for="subject">Topic :</label>
                            <div class="col-sm-8">
                                <input type="text" name="subject" id="subject" class="form-control" value="{{ old.subject }}" title="">
                            </div>
                            {% if ( errors.subject ) %} 
                                <span class="text-danger help-block text-center">{{ errors.subject | first }}</span>
                            {% endif %}                             
                        </div>
                    
                        <div class="form-group">
                            <label class="control-label col-sm-4" for="subject">Message :</label>
                            <div class="col-sm-8">
                                <textarea name="subject" class="form-control" rows="6"></textarea>
                            </div>                          
                        </div>
                    
                
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">
                                <button type="submit" class="btn btn-danger">Contact US</button>
                            </div>
                        </div>

                    </form>
            </form>
        </div>
    </div>
</section>

{% endblock %}