<section class="index-blog">
    <div class="layer">
        <div class="container">
            <h3 data-aos="zoom-in" data-aos-duration="1000">Compensation Plan</h3>

            <div class="row"  data-aos="zoom-out" data-aos-duration="1000">

            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th style="color: red;">LEVEL</th>
                        <th style="color: red;">PAY</th>
                        <th style="color: red;">RECEIVE</th>
                        <th style="color: red;">UPGRADE</th>
